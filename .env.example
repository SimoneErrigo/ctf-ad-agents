# CTF A&D Agentic AI System â€” Environment Configuration
# Copy this file to .env and fill in the values before running

# LLM Provider Configuration
# Set at least one. The system uses fallback_chain by default:
# 1. Anthropic (if key set) -> 2. OpenAI (if key set) -> 3. Ollama (local)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Ollama (local fallback, no key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Preferred models (override defaults)
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
OPENAI_MODEL=gpt-4o

# Team shared key (optional)
# If set, users without personal keys use this (rate-limited)
TEAM_SHARED_PROVIDER=anthropic
TEAM_SHARED_API_KEY=
TEAM_SHARED_RATE_LIMIT=30

# Agent Ports
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000
VULN_AGENT_HOST=0.0.0.0
VULN_AGENT_PORT=8001
TRAFFIC_AGENT_HOST=0.0.0.0
TRAFFIC_AGENT_PORT=8002
PATCH_AGENT_HOST=0.0.0.0
PATCH_AGENT_PORT=8003
EXPLOIT_AGENT_HOST=0.0.0.0
EXPLOIT_AGENT_PORT=8004
TEST_AGENT_HOST=0.0.0.0
TEST_AGENT_PORT=8005
PROXY_AGENT_HOST=0.0.0.0
PROXY_AGENT_PORT=8006

# CTF Game Configuration
VM_IP=10.60.1.1
FLAG_REGEX=[A-Z0-9]{31}=
TICK_DURATION=120
GAME_NETWORK=10.60.0.0/16

# Vulnbox SSH
VULNBOX_SSH_HOST=${VM_IP}
VULNBOX_SSH_PORT=22
VULNBOX_SSH_USER=root
VULNBOX_SSH_KEY_PATH=~/.ssh/id_rsa

# Redis (for team collaboration)
REDIS_URL=redis://localhost:6379/0
